<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mycompany.mylibs.fragments.message_frag">

    <android.support.v7.widget.CardView
        android:layout_margin="20dp"
        android:id="@+id/card_no_message"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:contentDescription="@string/sad"
                app:srcCompat="@drawable/ic_sentiment_dissatisfied_black_48px"
                android:layout_width="200dp"
                android:layout_height="85dp" />

            <TextView
                android:padding="16dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/no_messages" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:visibility="invisible"
        android:id="@+id/recycler_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <!--<android.support.design.widget.FloatingActionButton
        android:clickable="true"
        android:id="@+id/fab_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:background="@color/accentColor"
        android:backgroundTint="@color/accentColor"
        app:backgroundTint="@color/accentColor"
        app:elevation="4dp"
        app:fabSize="normal"
        android:padding="0dp"
        app:srcCompat="@drawable/ic_message_white_36px"
        app:useCompatPadding="true"
        android:layout_margin="10dp" />-->

</android.support.design.widget.CoordinatorLayout>
