<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/verdeLimaColor</item>
        <item name="colorPrimaryDark">@color/verdeLimaDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="MyCustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/accentColor</item>
        <item name="android:textColorSecondary">@color/accentColor</item>
    </style>

    <style name="MyCustomPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/verdeLimaColor</item>
        <item name="android:textColorSecondary">@color/accentColor</item>
    </style>


</resources>
