<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.mylibs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Main"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.category"
                    android:parentActivityName=".Activities.Main">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>

        <activity android:name=".Activities.title"

                    android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>

        <activity android:name=".Activities.volume"
                    android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>

        <activity android:name=".Activities.loans"
                    android:label="@string/loan"
                    android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>

        <activity android:name=".Activities.profile"

                    android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>

        <activity android:name=".Activities.settings"
                    android:theme="@style/MyCustomToolbar"

                    android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>

        <activity android:name=".add_activities.add_category"
                    android:label="@string/add_category">

        </activity>

        <activity android:name=".add_activities.add_title"
                    android:label="@string/add_title">

        </activity>

        <activity android:name=".add_activities.add_volume"
                    android:label="@string/add_volume">

        </activity>
    </application>

</manifest>