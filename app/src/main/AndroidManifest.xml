<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.mylibs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.Main"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.categories"
            android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>
        <activity
            android:name=".Activities.collections"
            android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>
        <activity
            android:name=".Activities.itens"
            android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>
        <activity
            android:name=".Activities.profile"
            android:parentActivityName=".Activities.Main">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>
        <activity
            android:name=".Activities.settings"
            android:parentActivityName=".Activities.Main"
            android:theme="@style/MyCustomToolbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activities.Main" />
        </activity>
        <activity
            android:name=".add_activities.add_category"
            android:label="@string/add_category" />
        <activity
            android:name=".add_activities.add_collection"
            android:label="@string/add_title" />
        <activity
            android:name=".add_activities.add_item"
            android:label="@string/add_volume" />
        <activity android:name=".Activities.friends" />
        <activity android:name=".Activities.login" />
        <activity android:name=".add_activities.new_user" />
        <activity android:name=".Activities.market"></activity>
    </application>

</manifest>